<body>
  <header>
    <h1 class="site-title">Orders</h1>

    {{> link_header}}
  </header>

  <div class="order-info">
    <form class="order-info-form" action="index.html">
      <fieldset>
        <legend>Order Information</legend>

        <p>Total: ${{total_dollars}}.{{total_cents}}</p>

        <label for="fname">First name:</label><br>
        <input type="text" name="fname"><br>
        <label for="lname">Last name:</label><br>
        <input type="text" name="lname"><br>
        <label for="email">Email:</label><br>
        <input type="email" name="email" placeholder="me@email.com"><br>
        <label for="phone">Phone Number:</label><br>
        <input type="tel" name="phone" pattern="[0-9]{3}-[0-9]{2}-[0-9]{3}" placeholder="111-222-3333"><br>  <!-- This format might have to change -->
      </fieldset>

      <input type="submit" value="Submit Order">
    </form>
  </div>
</body>
